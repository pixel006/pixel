<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('usdChart').getContext('2d');

// –†–µ–∞–ª—å–Ω—ã–µ –æ—Ä–∏–µ–Ω—Ç–∏—Ä—ã –∫—É—Ä—Å–∞ –¥–æ–ª–ª–∞—Ä–∞ (2010‚Äì2025)
const usdRates = [30.4, 29.4, 31.1, 32.8, 38.6, 61.3, 67.0, 58.3, 62.5, 64.7, 72.1, 73.7, 68.5, 83.2, 89.6, 94.3];const chart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: Array.from({ length: usdRates.length }, (_, i) => 2010 + i),
    datasets: [{
      data: usdRates,
      borderColor: '#00ffcc',
      borderWidth: 2,
      fill: false,
      tension: 0.4,
      shadowOffsetX: 0,
      shadowOffsetY: 0,
      shadowBlur: 15,
      shadowColor: '#00ffff'
    }]
  },
  options: {
    plugins: { legend: { display: false } },
    scales: { x: { display: false }, y: { display: false } },
    elements: { point: { radius: 0 } },
    responsive: true,
    maintainAspectRatio: false,
    animation: false
  }
});

// üîπ –≠—Ñ—Ñ–µ–∫—Ç "–±–µ–≥—É—â–µ–≥–æ —Å–≤–µ—Ç–∞" –ø–æ –≥—Ä–∞—Ñ–∏–∫—É
const canvas = document.getElementById('usdChart');
const ctxGlow = canvas.getContext('2d');
let progress = 0;
function animateGlow() {
  const chartArea = chart.chartArea;
  const meta = chart.getDatasetMeta(0);
  const points = meta.data;
  if (!points.length) return;

  const point = points[Math.floor(progress)];
  if (point) {
    ctxGlow.save();
    ctxGlow.beginPath();
    const gradient = ctxGlow.createRadialGradient(point.x, point.y, 0, point.x, point.y, 40);
    gradient.addColorStop(0, 'rgba(0,255,255,0.7)');
    gradient.addColorStop(1, 'rgba(0,255,255,0)');
    ctxGlow.fillStyle = gradient;
    ctxGlow.fillRect(chartArea.left, chartArea.top, chartArea.right - chartArea.left, chartArea.bottom - chartArea.top);
    ctxGlow.restore();
  }

  progress += 0.05;
  if (progress >= points.length) progress = 0;
  requestAnimationFrame(animateGlow);
}
animateGlow();
</script>

