<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="UTF-8">
<title>Админ-панель</title>
<link rel="stylesheet" href="/style.css">
<style>
/* === Основной стиль === */
body {
  margin: 0;
  font-family: "Inter", "Segoe UI", Roboto, sans-serif;
  background: #f5f6fa;
  color: #333;
}
.container {
  width: 95%;
  max-width: 1100px;
  margin: 40px auto;
  background: #fff;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}
h1 {
  text-align: center;
  color: #222;
  margin-bottom: 30px;
  font-weight: 700;
  letter-spacing: 1px;
}

/* === Таблица === */
table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.95em;
}
th, td {
  padding: 12px 15px;
  border-bottom: 1px solid #e0e0e0;
  text-align: left;
}
th {
  background: #00aaff;
  color: #fff;
  font-weight: 600;
  letter-spacing: 0.5px;
}
tr:hover {
  background: #f0f8ff;
}
td {
  vertical-align: middle;
}

/* === Кнопки === */
button.btn-small {
  padding: 6px 14px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: 0.3s;
  margin-right: 5px;
}
button.deposit {
  background: #28a745;
  color: #fff;
}
button.deposit:hover {
  background: #218838;
}
button.withdraw {
  background: #ffc107;
  color: #222;
}
button.withdraw:hover {
  background: #e0a800;
}
button.delete {
  background: #dc3545;
  color: #fff;
}
button.delete:hover {
  background: #c82333;
}

/* === Модальное окно === */
.modal {
  display: none;
  position: fixed;
  z-index: 100;
  left: 0; top: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  justify-content: center;
  align-items: center;
}
.modal-content {
  background: #fff;
  padding: 25px 30px;
  border-radius: 12px;
  width: 360px;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}
.modal-content h2 {
  margin-bottom: 20px;
  font-size: 1.2em;
  color: #222;
}
.modal-content input[type=number] {
  width: 100%;
  padding: 12px;
  border-radius: 8px;
  border: 1px solid #ccc;
  margin-bottom: 16px;
  font-size: 1em;
}
.modal-content button {
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  margin-top: 10px;
  width: 100%;
}
.modal-content button.confirm {
  background: #00aaff;
  color: #fff;
}
.modal-content button.confirm:hover {
  background: #008ecc;
}
.modal-content button.cancel {
  background: #dc3545;
  color: #fff;
  margin-top: 10px;
}
.modal-content button.cancel:hover {
  background: #c82333;
}

/* === Уведомления === */
#notification {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  display: none;
  z-index: 200;
}
#notification.success { background: #28a745; color: #fff; }
#notification.error { background: #dc3545; color: #fff; }
</style>
</head>
<body>

<div class="container">
<h1>Админ-панель</h1>

<table>
<thead>
<tr>
<th>Имя</th>
<th>Возраст</th>
<th>Email</th>
<th>Баланс</th>
<th>Реферальный код</th>
<th>Кто пригласил</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% users.forEach(user => { %>
<tr>
<td><%= user.name %></td>
<td><%= user.age %></td>
<td><%= user.email %></td>
<td>$<%= user.balance.toFixed(2) %></td>
<td><%= user.referralCode %></td>
<td><%= user.referredBy || '-' %></td>
<td>
<button class="btn-small deposit" onclick="openModal('<%= user._id %>', 'deposit')">Пополнить</button>
<button class="btn-small withdraw" onclick="openModal('<%= user._id %>', 'withdraw')">Вывести</button>
<form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
<button type="submit" class="btn-small delete">Удалить</button>
</form>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>

<!-- Модальное окно -->
<div class="modal" id="modal">
<div class="modal-content">
<h2 id="modal-title">Пополнение/Вывод</h2>
<input type="number" id="amount" placeholder="Сумма">
<button class="confirm" onclick="submitAction()">Подтвердить</button>
<button class="cancel" onclick="closeModal()">Отмена</button>
</div>
</div>

<div id="notification"></div><script>
let currentUserId = '';
let currentAction = '';

function showNotification(message, type='success') {
    const notif = document.getElementById('notification');
    notif.textContent = message;
    notif.className = '';
    notif.classList.add(type);
    notif.style.display = 'block';
    setTimeout(() => { notif.style.display = 'none'; }, 3000);
}

function openModal(userId, action) {
    currentUserId = userId;
    currentAction = action;
    document.getElementById('modal-title').textContent = action === 'deposit' ? 'Пополнение счёта' : 'Вывод средств';
    document.getElementById('amount').value = '';
    document.getElementById('modal').style.display = 'flex';
}

function closeModal() {
    document.getElementById('modal').style.display = 'none';
}

async function submitAction() {
    const amount = parseFloat(document.getElementById('amount').value);
    if (!amount || amount <= 0) {
        showNotification('Введите корректную сумму', 'error');
        return;
    }
    try {
        const res = await fetch(`/admin/${currentAction}/${currentUserId}`, {
            method: 'POST',
            headers: {'Content-Type':'application/json'},
            body: JSON.stringify({ amount })
        });
        const data = await res.json();
        if (data.success) {
            showNotification(data.message || 'Успешно', 'success');
            closeModal();
            setTimeout(() => location.reload(), 500);
        } else {
            showNotification(data.message || 'Ошибка', 'error');
        }
    } catch(err) {
        console.error(err);
        showNotification('Ошибка сервера', 'error');
    }
}
</script>

</body>
</html>