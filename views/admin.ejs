<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="UTF-8">
<title>Админ-панель</title>
<link rel="stylesheet" href="/style.css">
<style>
body {
  margin: 0;
  font-family: "Inter", "Segoe UI", Roboto, sans-serif;
  background: #101222;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  min-height: 100vh;
  padding: 20px 0;
}
.container {
  width: 90%;
  max-width: 900px;
  background: rgba(20,20,40,0.95);
  padding: 30px;
  border-radius: 16px;
  box-shadow: 0 0 32px rgba(0,224,255,0.4);
}
h1 {
  text-align: center;
  color: #00e0ff;
  margin-bottom: 20px;
}
table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.95em;
}
th, td {
  padding: 10px;
  border-bottom: 1px solid rgba(255,255,255,0.2);
  text-align: left;
}
th {
  color: #00e0ff;
}
tr:hover {
  background: rgba(255,255,255,0.05);
}
button.btn-small {
  padding: 6px 12px;
  border: none;
  border-radius: 8px;
  background: linear-gradient(135deg, #00e0ff, #6a5acd);
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  transition: 0.3s;
  margin-right: 5px;
}
button.btn-small:hover {
  transform: scale(1.05);
  box-shadow: 0 0 20px rgba(0,224,255,0.4);
}

/* Модальное окно */
.modal {
  display: none;
  position: fixed;
  z-index: 100;
  left: 0; top: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.7);
  justify-content: center;
  align-items: center;
}
.modal-content {
  background: #101222;
  padding: 30px;
  border-radius: 16px;
  width: 320px;
  text-align: center;
  color: #fff;
  box-shadow: 0 0 32px rgba(0,224,255,0.4);
}
.modal-content input[type=number] {
  width: 100%;
  padding: 12px;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255,0.2);
  margin-bottom: 16px;
  font-size: 1em;
  background: rgba(0,0,0,0.3);
  color: #fff;
}
.modal-content button {
  padding: 12px 24px;
  font-size: 1em;
  font-weight: 600;
  border: none;
  border-radius: 12px;
  background: linear-gradient(135deg, #00e0ff, #6a5acd);
  color: #fff;
  cursor: pointer;
  box-shadow: 0 0 20px rgba(0,224,255,0.4);
  transition: 0.3s;
  margin-top: 10px;
}
.modal-content button:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px rgba(0,224,255,0.6);
}
.modal-content button.cancel {
  background: linear-gradient(135deg, #ff4c4c, #ff0000);
}

/* Уведомления */
#notification {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.8);
  padding: 12px 20px;
  border-radius: 12px;
  font-weight: 600;
  color: #fff;
  display: none;
  z-index: 200;
}
#notification.success { background: linear-gradient(135deg, #00e0ff, #6a5acd); }
#notification.error { background: linear-gradient(135deg, #ff4c4c, #ff0000); }
</style>
</head>
<body>

<div class="container">
<h1>Админ-панель</h1>

<table>
<thead>
<tr>
<th>Имя</th>
<th>Возраст</th>
<th>Email</th>
<th>Баланс</th>
<th>Реферальный код</th>
<th>Кто пригласил</th>
<th>Действия</th>
</tr>
</thead>
<tbody>
<% users.forEach(user => { %>
<tr>
<td><%= user.name %></td>
<td><%= user.age %></td>
<td><%= user.email %></td>
<td>$<%= user.balance.toFixed(2) %></td>
<td><%= user.referralCode %></td>
<td><%= user.referredBy || '-' %></td>
<td>
<button class="btn-small" onclick="openModal('<%= user._id %>', 'deposit')">Пополнить</button>
<button class="btn-small" onclick="openModal('<%= user._id %>', 'withdraw')">Вывести</button>
<form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
<button type="submit" class="btn-small">Удалить</button>
</form>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>

<!-- Модальное окно -->
<div class="modal" id="modal">
<div class="modal-content">
<h2 id="modal-title">Пополнение/Вывод</h2>
<input type="number" id="amount" placeholder="Сумма">
<button onclick="submitAction()">Подтвердить</button>
<button class="cancel" onclick="closeModal()">Отмена</button>
</div>
</div>

<div id="notification"></div>

<script>
let currentUserId = '';
let currentAction = ''; // deposit или withdrawfunction showNotification(message, type='success') {
    const notif = document.getElementById('notification');
    notif.textContent = message;
    notif.className = '';
    notif.classList.add(type);
    notif.style.display = 'block';
    setTimeout(() => { notif.style.display = 'none'; }, 3000);
}

function openModal(userId, action) {
    currentUserId = userId;
    currentAction = action;
    document.getElementById('modal-title').textContent = action === 'deposit' ? 'Пополнение счёта' : 'Вывод средств';
    document.getElementById('amount').value = '';
    document.getElementById('modal').style.display = 'flex';
}

function closeModal() {
    document.getElementById('modal').style.display = 'none';
}

async function submitAction() {
    const amount = parseFloat(document.getElementById('amount').value);
    if (!amount || amount <= 0) {
        showNotification('Введите корректную сумму', 'error');
        return;
    }
    try {
        const res = await fetch(/admin/${currentAction}/${currentUserId}, {
            method: 'POST',
            headers: {'Content-Type':'application/json'},
            body: JSON.stringify({ amount })
        });
        const data = await res.json();
        if (data.success) {
            showNotification(data.message || 'Успешно', 'success');
            closeModal();
            setTimeout(() => location.reload(), 500); // обновляем таблицу
        } else {
            showNotification(data.message || 'Ошибка', 'error');
        }
    } catch(err) {
        console.error(err);
        showNotification('Ошибка сервера', 'error');
    }
}
</script>

</body>
</html>