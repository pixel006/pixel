<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Редактор страницы депозита</title>

  <!-- GrapesJS стили -->
  <link href="https://unpkg.com/grapesjs/dist/css/grapes.min.css" rel="stylesheet"/>

  <style>
    body, html { height: 100%; margin: 0; }
    #gjs { height: 100vh; }
  </style>
</head>
<body>

<div id="gjs">
  <div class="container">
    <h1>Пополнить баланс</h1>
    <p>Баланс: $0.40</p>
    <input type="number" placeholder="Сумма" step="0.01" min="0">
    <button>Пополнить</button>
  </div>
</div>

<!-- Скрипт GrapesJS -->
<script src="https://unpkg.com/grapesjs"></script>
<script src="https://unpkg.com/grapesjs-preset-webpage"></script>
<script>
const editor = grapesjs.init({
  container: '#gjs',
  fromElement: true,
  height: '100%',
  width: 'auto',
  storageManager: {
    type: 'local',
    autosave: true,
    autoload: true,
  },
  plugins: ['gjs-preset-webpage'],
  pluginsOpts: {
    'gjs-preset-webpage': {}
  }
});
</script>

</body>
</html>