<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Личный кабинет — 2030</title>

<style>
/* ======== ТЕМА 2030 — НЕЙРОМИНИМАЛИЗМ ======== */
:root {
  --bg-dark: #06070a;
  --bg-panel: rgba(255, 255, 255, 0.03);
  --accent: #00e0ff;
  --accent-glow: 0 0 24px #00e0ff88;
  --text: #f0f4ff;
  --text-dim: #a0a5b8;
  --radius: 18px;
  --blur: 16px;
  --shadow-soft: 0 0 32px rgba(0, 0, 0, 0.4);
  --font-main: "Inter", "Segoe UI", Roboto, sans-serif;
}

* {
  box-sizing: border-box;
  transition: all 0.25s ease;
}

body {
  margin: 0;
  font-family: var(--font-main);
  color: var(--text);
  background: radial-gradient(circle at 50% -30%, #101222, #040507 80%);
  min-height: 100vh;
  overflow-x: hidden;
}

/* ======== КНОПКА-МЕНЮ ======== */
#menuToggle {
  position: fixed;
  top: 24px;
  left: 28px;
  width: 56px;
  height: 56px;
  border: none;
  border-radius: 50%;
  background: var(--bg-panel);
  backdrop-filter: blur(var(--blur));
  color: var(--accent);
  font-size: 1.6em;
  cursor: pointer;
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--accent-glow);
}
#menuToggle:hover {
  background: rgba(0, 224, 255, 0.15);
  transform: scale(1.05);
}

/* ======== БОКОВОЕ МЕНЮ ======== */
aside.sidebar {
  position: fixed;
  top: 0;
  left: -260px;
  width: 260px;
  height: 100vh;
  background: rgba(10, 10, 20, 0.8);
  backdrop-filter: blur(30px);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 120px 30px;
  box-shadow: inset -1px 0 0 rgba(255,255,255,0.05);
  transition: left 0.4s cubic-bezier(0.7, 0, 0.2, 1);
}
.sidebar.open {
  left: 0;
}
.sidebar a {
  width: 100%;
  text-decoration: none;
  color: var(--text);
  font-weight: 500;
  font-size: 1.05em;
  padding: 14px 0;
  margin: 6px 0;
  border-radius: var(--radius);
  position: relative;
}
.sidebar a::before {
  content: "";
  position: absolute;
  left: -20px;
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: transparent;
  transition: 0.3s;
}
.sidebar a:hover::before {
  background: var(--accent);
  box-shadow: var(--accent-glow);
}
.sidebar a:hover {
  color: var(--accent);
  transform: translateX(5px);
}

/* ======== ОСНОВНОЙ КОНТЕНТ ======== */
main.content {
  padding: 100px 40px;
  margin-left: 0;
  transition: margin-left 0.4s ease;
}
main.content.shifted {
  margin-left: 260px;
}
h1 {
  font-weight: 600;
  letter-spacing: 0.3px;
  margin-bottom: 30px;
  background: linear-gradient(90deg, var(--accent), #6a5acd);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.balance-card {
  background: var(--bg-panel);
  backdrop-filter: blur(var(--blur));
  border-radius: var(--radius);
  border: 1px solid rgba(255,255,255,0.05);
  padding: 32px 36px;
  max-width: 420px;
  box-shadow: var(--shadow-soft);
}
.balance-card h2 {
  font-size: 1.2em;
  color: var(--text-dim);
  margin-bottom: 8px;
}
.balance-card p {
  font-size: 2em;
  font-weight: 600;
  color: var(--accent);
  text-shadow: 0 0 18px rgba(0, 224, 255, 0.5);
}

/* ======== НАВИГАЦИЯ ВНИЗУ ======== */
nav.fixed-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 18px;
  padding: 20px;
  background: rgba(10,10,20,0.75);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(255,255,255,0.05);
}
nav.fixed-footer a {
  flex: 1;
  max-width: 160px;
  text-align: center;
  text-decoration: none;
  color: var(--text);
  font-weight: 500;
  font-size: 0.95em;
  background: var(--bg-panel);
  padding: 14px 0;
  border-radius: var(--radius);
  letter-spacing: 0.5px;
  transition: 0.3s;
  position: relative;
  overflow: hidden;}
nav.fixed-footer a:hover {
  color: var(--accent);
  transform: translateY(-2px);
  box-shadow: var(--accent-glow);
}
#depositBtn {
  background: linear-gradient(135deg, var(--accent), #6a5acd);
  color: #fff;
  font-weight: 600;
  letter-spacing: 0.8px;
  border: none;
  border-radius: var(--radius);
  box-shadow: 0 0 20px 3px rgba(0, 224, 255, 0.4);
}
#depositBtn:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px 6px rgba(0, 224, 255, 0.5);
}

/* ======== МИКРОАНИМАЦИИ ======== */
@keyframes glowPulse {
  0%, 100% { box-shadow: 0 0 10px rgba(0,224,255,0.4); }
  50% { box-shadow: 0 0 25px rgba(0,224,255,0.8); }
}
#depositBtn {
  animation: glowPulse 2.5s infinite ease-in-out;
}

/* ======== АДАПТИВНОСТЬ ======== */
@media (max-width: 600px) {
  main.content {
    padding: 80px 24px;
  }
  .balance-card {
    padding: 24px 28px;
  }
  nav.fixed-footer a {
    font-size: 0.85em;
    max-width: 120px;
  }
}
</style>
</head>
<body>

<!-- Кнопка меню -->
<button id="menuToggle">☰</button>

<!-- Боковая панель -->
<aside class="sidebar" id="sidebar">
  <a href="/logout">Выйти</a>
  <a href="/support">Поддержка</a>
  <a href="/settings">Настройки</a>
</aside>

<!-- Основной контент -->
<main class="content" id="mainContent">
  <% if (currentUser) { %>
  <h1>Добро пожаловать, <%= currentUser.name %></h1>
  <div class="balance-card">
    <h2>Баланс</h2>
    <p>$<%= currentUser.balance.toFixed(2) %></p>
  </div>
  <p style="margin-top:30px;color:var(--text-dim);font-size:1.05em;">
    Нажмите <b>START</b> внизу для запуска депозита.
  </p>
  <% } %>
</main>

<!-- Нижняя навигация -->
<nav class="fixed-footer">
  <a href="/group">Группа</a>
  <a id="depositBtn">START</a>
  <a href="/history">История</a>
</nav>

<script>
const menuToggle = document.getElementById('menuToggle');
const sidebar = document.getElementById('sidebar');
const mainContent = document.getElementById('mainContent');

menuToggle.addEventListener('click', () => {
  sidebar.classList.toggle('open');
  mainContent.classList.toggle('shifted');
});

const depositBtn = document.getElementById('depositBtn');
depositBtn.addEventListener('click', async () => {
  depositBtn.textContent = '...';
  try {
    const res = await fetch('/start-deposit', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ amount: 100 })
    });
    if (res.redirected) window.location.href = res.url;
  } catch (err) {
    alert('Ошибка сервера');
  } finally {
    depositBtn.textContent = 'START';
  }
});
</script>

</body>
</html>