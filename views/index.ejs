<body>

<button id="menuToggle" aria-label="–ú–µ–Ω—é">‚ò∞</button>

<aside class="sidebar" id="sidebar">
  <a href="/logout">–í—ã–π—Ç–∏</a>
  <a href="/support">–ü–æ–¥–¥–µ—Ä–∂–∫–∞</a>
  <a href="/settings">–ù–∞—Å—Ç—Ä–æ–π–∫–∏</a>
</aside>

<main class="content" id="mainContent">
  <% if(currentUser){ %>
    <h1>–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, <%= currentUser.name %></h1>

    <div class="balance-card" role="region" aria-label="–ë–∞–ª–∞–Ω—Å —Å—á–µ—Ç–∞">
      <div class="balance-top">
        <h2>–ë–∞–ª–∞–Ω—Å</h2>
        <div class="buttons" aria-hidden="false">
          <button type="button" onclick="topUpDeposit()">–ü–æ–ø–æ–ª–Ω–∏—Ç—å</button>
          <button type="button" onclick="withdrawDeposit()">–í—ã–≤–µ—Å—Ç–∏</button>
        </div>
      </div>

      <p class="balance-value">$<%= currentUser.balance.toFixed(2) %></p>
    </div>

    <p style="margin-top:10px;color:var(--text-dim);font-size:1.05em;">
      –ù–∞–∂–º–∏—Ç–µ <b>START</b> –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –¥–µ–ø–æ–∑–∏—Ç–∞.
    </p>
  <% } %>
</main>

<nav class="fixed-footer" role="navigation" aria-label="–ù–∏–∂–Ω—è—è –ø–∞–Ω–µ–ª—å">
  <a href="/group">–ì—Ä—É–ø–ø–∞</a>
  <a id="startBtn" role="button" tabindex="0">START</a>
  <a href="/history">–ò—Å—Ç–æ—Ä–∏—è</a>
</nav>

<script>
/* Sidebar toggle */
const menuToggle = document.getElementById('menuToggle');
const sidebar = document.getElementById('sidebar');
const mainContent = document.getElementById('mainContent');

menuToggle.addEventListener('click', () => {
  sidebar.classList.toggle('open');
  mainContent.classList.toggle('shifted');
});

/* START button opens /deposit in new tab/window */
const startBtn = document.getElementById('startBtn');if (startBtn) {
  startBtn.addEventListener('click', () => {
    window.open('/deposit', '_blank');
  });
  startBtn.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      window.open('/deposit', '_blank');
    }
  });
}

/* üí∏ –ü–ª–∞–≤–∞—é—â–∏–µ $ –ø–æ –≤—Å–µ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —à–∞–±–ª–æ–Ω–Ω—ã—Ö —Å—Ç—Ä–æ–∫) */
const layers = [
  { speed: 4, size: [18,24], opacity: [0.4,0.7], sway: 15 },
  { speed: 6, size: [14,20], opacity: [0.3,0.6], sway: 10 },
  { speed: 8, size: [10,16], opacity: [0.2,0.5], sway: 6 }
];

function spawnDollar() {
  const layer = layers[Math.floor(Math.random()*layers.length)];
  const dollar = document.createElement("div");
  dollar.classList.add("dollar");
  dollar.textContent = "$";

  // Random starting position (just outside the top area sometimes)
  const left = Math.random() * 100;
  const top = Math.random() * 100;
  dollar.style.left = left + "vw";
  dollar.style.top = top + "vh";
  dollar.style.fontSize = (Math.random()*(layer.size[1]-layer.size[0]) + layer.size[0]) + "px";
  dollar.style.opacity = (Math.random()*(layer.opacity[1]-layer.opacity[0]) + layer.opacity[0]).toString();
  dollar.style.zIndex = 0;

  const startRotation = Math.random()*360;
  const rotationSpeed = (Math.random()*30 + 15) * (Math.random() < 0.5 ? -1 : 1);
  const birth = Date.now();

  function animateDollar() {
    const elapsed = (Date.now() - birth)/1000;
    const offsetX = Math.sin(elapsed * 2 * Math.PI / layer.speed) * layer.sway;
    const rotation = startRotation + elapsed * rotationSpeed;
    // Use transform with translateX and rotate via template literal
    dollar.style.transform = `translateX(${offsetX}px) rotate(${rotation}deg)`;
    // slowly float up/down a bit
    const offsetY = Math.cos(elapsed * 2 * Math.PI / (layer.speed * 1.6)) * (layer.sway / 6);
    dollar.style.top = `calc(${top}vh + ${offsetY}px)`;
    requestAnimationFrame(animateDollar);
  }
  animateDollar();

  document.body.appendChild(dollar);
  // Remove after a while to avoid DOM bloat
  setTimeout(() => {
    if (dollar && dollar.parentNode) dollar.parentNode.removeChild(dollar);
  }, (layer.speed * 1000) + 4000);
}

/* Start spawning but moderate frequency to avoid too many nodes */
setInterval(spawnDollar, 700);

/* –§—É–Ω–∫—Ü–∏–∏ –∫–Ω–æ–ø–æ–∫ –ü–æ–ø–æ–ª–Ω–∏—Ç—å –∏ –í—ã–≤–µ—Å—Ç–∏ */
function topUpDeposit() {
  const raw = prompt("–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –¥–ª—è –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è:");
  if (!raw) return;
  const amount = parseFloat(raw.replace(',', '.'));
  if (isNaN(amount) || amount <= 0) { alert("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Å—É–º–º—É."); return; }

  fetch('/deposit/topup', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({ amount: amount })
  })
  .then(res => res.json())
  .then(data => {
    alert(data.message || "–û–ø–µ—Ä–∞—Ü–∏—è –∑–∞–≤–µ—Ä—à–µ–Ω–∞.");
    if (data.success) location.reload();
  })
  .catch(() => alert("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ."));
}

function withdrawDeposit() {
  const raw = prompt("–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –¥–ª—è –≤—ã–≤–æ–¥–∞:");
  if (!raw) return;
  const amount = parseFloat(raw.replace(',', '.'));
  if (isNaN(amount) || amount <= 0) { alert("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Å—É–º–º—É."); return; }

  fetch('/deposit/withdraw', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({ amount: amount })
  })
  .then(res => res.json())
  .then(data => {
    alert(data.message || "–û–ø–µ—Ä–∞—Ü–∏—è –∑–∞–≤–µ—Ä—à–µ–Ω–∞.");
    if (data.success) location.reload();
  })
  .catch(() => alert("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ."));
}
</script>

