<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Личный кабинет — 2030</title>
<style>
:root {
  --bg-dark: #06070a;
  --bg-panel: rgba(255, 255, 255, 0.03);
  --accent: #00e0ff;
  --accent2: #6a5acd;
  --accent-glow: 0 0 24px #00e0ff88;
  --text: #f0f4ff;
  --text-dim: #a0a5b8;
  --radius: 18px;
  --blur: 16px;
  --shadow-soft: 0 0 32px rgba(0,0,0,0.4);
  --font-main: "Inter", "Segoe UI", Roboto, sans-serif;
}
* { box-sizing: border-box; transition: all 0.25s ease; }
body {
  margin: 0;
  font-family: var(--font-main);
  color: var(--text);
  background: radial-gradient(circle at 50% -30%, #101222, #040507 80%);
  min-height: 100vh;
  overflow-x: hidden;
  position: relative;
  animation: bgPulse 10s infinite alternate;
}
@keyframes bgPulse {
  0% { background-position: 50% -30%; }
  100% { background-position: 50% -35%; }
}
.dollar {
  position: absolute;
  font-size: 22px;
  color: rgba(0,224,255,0.5);
  user-select: none;
  pointer-events: none;
}
#menuToggle {
  position: fixed; top: 24px; left: 28px;
  width: 56px; height: 56px;
  border: none; border-radius: 50%;
  background: var(--bg-panel); backdrop-filter: blur(var(--blur));
  color: var(--accent); font-size: 1.6em;
  cursor: pointer; z-index: 2000;
  display: flex; align-items: center; justify-content: center;
  box-shadow: var(--accent-glow);
}
#menuToggle:hover { background: rgba(0,224,255,0.15); transform: scale(1.05); }
aside.sidebar {
  position: fixed; top:0; left: -260px; width:260px; height:100vh;
  background: rgba(10,10,20,0.8); backdrop-filter: blur(30px);
  display: flex; flex-direction: column; align-items: flex-start;
  padding: 120px 30px; box-shadow: inset -1px 0 0 rgba(255,255,255,0.05);
  transition: left 0.4s cubic-bezier(0.7,0,0.2,1);
}
.sidebar.open { left:0; }
.sidebar a {
  width:100%; text-decoration:none; color:var(--text); font-weight:500; font-size:1.05em;
  padding:14px 0; margin:6px 0; border-radius: var(--radius); position: relative;
}
.sidebar a::before {
  content:""; position:absolute; left:-20px; top:50%; transform:translateY(-50%);
  width:6px; height:6px; border-radius:50%; background:transparent; transition:0.3s;
}
.sidebar a:hover::before { background: var(--accent); box-shadow: var(--accent-glow); }
.sidebar a:hover { color: var(--accent); transform:translateX(5px); }
main.content { padding:100px 40px; margin-left:0; transition: margin-left 0.4s ease; }
main.content.shifted { margin-left:260px; }
h1 {
  font-weight:600; letter-spacing:0.3px; margin-bottom:30px;
  background: linear-gradient(90deg,var(--accent), var(--accent2));
  -webkit-background-clip: text; -webkit-text-fill-color: transparent;
  opacity: 0; transform: translateY(-30px);
  animation: fadeUp 0.8s forwards 0.2s;
}
.balance-card {
  background: var(--bg-panel);
  backdrop-filter: blur(var(--blur));
  border-radius: var(--radius);
  border: 1px solid rgba(255,255,255,0.05);
  padding: 28px 28px;
  max-width: 420px;
  box-shadow: var(--shadow-soft);
  margin-bottom: 20px;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeUp 0.8s forwards 0.4s;
}
.balance-card .balance-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}
.balance-card h2 { font-size: 1.2em; color: var(--text-dim); margin: 0; line-height: 1.3; }
.balance-card .buttons {
  display: flex; flex-direction: column;
  gap: 10px; align-items: flex-end; justify-content: center;
  margin-top: 10px;
}
.balance-card button, .balance-card a.button-link {
  background: linear-gradient(135deg, var(--accent), var(--accent2));
  color: #fff;
  border: none;
  padding: 10px 22px;
  border-radius: var(--radius);
  font-weight: 600;
  font-size: 1em;
  cursor: pointer;
  transition: 0.3s;
  box-shadow: 0 0 20px rgba(0,224,255,0.4);
  min-width: 140px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
}
.balance-card button:hover, .balance-card a.button-link:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px rgba(0,224,255,0.5);
}
.balance-card .balance-value {
  font-size: 2em;
  font-weight: 600;
  color: var(--accent);
  text-shadow: 0 0 18px rgba(0,224,255,0.5);
  margin: 0;
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: left;
}
#startBtn {
  flex:1; max-width:160px; text-align:center; text-decoration:none; color:#fff;
  font-weight:600; background: linear-gradient(135deg, var(--accent), var(--accent2));
  padding:14px 0; border-radius: var(--radius); cursor:pointer;
  box-shadow: 0 0 20px 3px rgba(0,224,255,0.4);
  animation: glowPulse 2.5s infinite ease-in-out, fadeUp 0.8s forwards 0.6s;
  opacity: 0;
}
#startBtn:hover { transform: scale(1.05); box-shadow:0 0 25px 6px rgba(0,224,255,0.5); }
@keyframes fadeUp { to { opacity: 1; transform: translateY(0); } }
@keyframes glowPulse { 0%,100% { box-shadow:0 0 10px rgba(0,224,255,0.4);} 50%{ box-shadow:0 0 25px rgba(0,224,255,0.8);} }
nav.fixed-footer {
  position: fixed; bottom:0; left:0; width:100%; display:flex; justify-content:center;
  gap:18px; padding:20px; background: rgba(10,10,20,0.75); backdrop-filter: blur(20px);
  border-top:1px solid rgba(255,255,255,0.05); z-index: 1000;
}
nav.fixed-footer a {
  flex:1; max-width:160px; text-align:center; text-decoration:none; color: var(--text);
  font-weight:500; padding:14px 0; border-radius: var(--radius); background: var(--bg-panel);
  transition:0.3s;
}
nav.fixed-footer a:hover { color: var(--accent); transform: translateY(-2px); box-shadow: var(--accent-glow); }
@media(max-width:600px){
  main.content{padding:80px 24px;}
  .balance-card{padding:24px 28px;}
  nav.fixed-footer a{font-size:0.85em;max-width:120px;}
}
</style>
</head>
<body>

<button id="menuToggle">☰</button>

<aside class="sidebar" id="sidebar">
  <a href="/logout">Выйти</a>
  <a href="/support">Поддержка</a>
  <a href="/settings">Настройки</a>
</aside>

<main class="content" id="mainContent">
  <% if(currentUser){ %>
    <h1>Добро пожаловать, <%= currentUser.name %></h1>
    <div class="balance-card">
      <div class="balance-top">
        <h2>Баланс</h2>
        <div class="buttons">
          <a href="/deposit/topup" class="button-link">Пополнить</a>
          <a href="/deposit/start"><button>Пополнить депозит</button></a>
          <button onclick="withdrawDeposit()">Вывести</button>
        </div>
      </div>
      <p class="balance-value">$<%= currentUser.balance.toFixed(2) %></p>
    </div>
    <p style="margin-top:30px;color:var(--text-dim);font-size:1.05em;">
      Нажмите <b>START</b> для запуска депозита.
    </p>
  <% } %>
</main>

<nav class="fixed-footer">
  <a href="/group">Группа</a>
  <a id="startBtn">START</a>
  <a href="/history">История</a>
</nav>

<script>
const menuToggle = document.getElementById('menuToggle');
const sidebar = document.getElementById('sidebar');
const mainContent = document.getElementById('mainContent');

menuToggle.addEventListener('click', () => { 
    sidebar.classList.toggle('open'); 
    mainContent.classList.toggle('shifted'); 
});

const startBtn = document.getElementById('startBtn');
if(startBtn){
    startBtn.addEventListener('click', () => { 
        window.open('/deposit', '_blank'); 
    });
}

const layers = [
  { speed: 4, size: [18,24], opacity: [0.4,0.7], sway: 15 },
  { speed: 6, size: [14,20], opacity: [0.3,0.6], sway: 10 },
  { speed: 8, size: [10,16], opacity: [0.2,0.5], sway: 6 }
];

function spawnDollar() {
  const layer = layers[Math.floor(Math.random()*layers.length)];
  const dollar = document.createElement("div");
  dollar.classList.add("dollar");
  dollar.textContent = "$";
  dollar.style.left = Math.random()*100 + "vw";
  dollar.style.top = Math.random()*100 + "vh";
  dollar.style.fontSize = (Math.random()*(layer.size[1]-layer.size[0]) + layer.size[0]) + "px";
  dollar.style.opacity = Math.random()*(layer.opacity[1]-layer.opacity[0]) + layer.opacity[0];
  dollar.style.zIndex = 0;
  const startRotation = Math.random()*360;
  let rotationSpeed = (Math.random()*30 + 15) * (Math.random() < 0.5 ? -1 : 1);
  let start = Date.now();
  function animateDollar() {
    const elapsed = (Date.now() - start)/1000;
    const offsetX = Math.sin(elapsed * 2 * Math.PI / layer.speed) * layer.sway;
    const rotation = startRotation + elapsed * rotationSpeed;
    dollar.style.transform = `translateX(${offsetX}px) rotate(${rotation}deg)`;
    requestAnimationFrame(animateDollar);
  }
  animateDollar();
  document.body.appendChild(dollar);
  setTimeout(() => dollar.remove(), layer.speed*1000 + 1000);
}

setInterval(spawnDollar, 400);

function withdrawDeposit() {
  const amount = prompt("Введите сумму для вывода:");
  if(!amount) return;
  fetch('/deposit/withdraw', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({ amount: parseFloat(amount) })
  })
  .then(res => res.json())
  .then(data => {
    alert(data.message);
    if(data.success) location.reload();
  });
}
</script>

</body>
</html>
